<% user = User.find(team_member.user_id) %>
<div class="d-flex justify-content-between align-items-center bg-white border-bottom">
  <p class='list-group-item bg-white m-0 border-0'><%= user.fullname %></p>
  <div>
  <% if team_member.attendances.find_by(event: Event.find(params[:id])).absence  %>
    <i class="fa-solid fa-circle-xmark mx-3 text-danger"></i>
  <% else %>
    <i class="fa-solid fa-check mx-3 text-success"></i>
  <% end %>
  <% if current_user.coach_or_manager?(team) %>
    <%= link_to team_member_path(team_member), data:{turbo_method: :delete, turbo_confirm: "Are you sure?"}, class:'bg-white' do %>
      <i class="fa-solid fa-xmark text-black mx-3"></i>
    <% end %>
  <% end %>
  </div>
</div>
