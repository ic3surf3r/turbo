<%= link_to event_path(event), class:'inherit-all' do %>
  <div class="event-card br box-shadow">
    <div class="d-flex justify-content-between align-items-center">
      <div class="d-flex align-items-center">
        <div class='text-center mx-3'>
          <p class='m-0'><%= event.start_time.strftime('%b') %></p>
          <p class='h1 m-0 '><%= event.start_time.strftime('%d') %></p>
          <p class='m-0'><%= event.start_time.strftime('%a') %></p>
        </div>
        <div class='mx-3 '>
        <div class='d-flex align-items-baseline'>
          <h3><strong><%= event.title %>  </strong></h3>
          <p class='mx-2'><%= event.team.name %></p>
        </div>
          <em> <%= event.address %></em>
          <% if event.location_id %>
            <small> <strong>@<%= (Location.find(event.location_id)).name %></strong></small>
          <% end %>
          <p><%= event.description %></p>
          <p><%= event.team.club.name %></p>
        </div>
    </div>
      <div class='mx-3'>
        <p class='my-0'><%= event.start_time.strftime('%H:%M') %></p>
        <p class='text-center my-0'>-</p>
        <p class='my-0'><%= event.end_time.strftime('%H:%M') %></p>
      </div>
    </div>
  </div>
<% end %>
