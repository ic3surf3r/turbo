<% user = User.find(team_member.user_id) %>
<div class="bg-white border-bottom">
  <div class="d-flex justify-content-between align-items-center ">
    <p class='list-group-item bg-white m-0 border-0'><%= user.fullname %></p>
    <div>
      <% if team_member.is_coach %>
        <i class="fa-solid fa-user-tie orange mx-2"></i>
      <% end %>
      <% if team_member.attendances.find_by(event: Event.find(params[:id])).absence  %>
        <i class="fa-solid fa-circle-xmark mx-3 text-danger"></i>
      <% else %>
        <i class="fa-solid fa-check mx-3 text-success"></i>
      <% end %>
    </div>
  </div>
  <p class='list-group-item bg-white m-0 border-0 text-wrap text-break'><%= team_member.attendances.find_by(event: Event.find(params[:id])).comment %></p>
</div>
