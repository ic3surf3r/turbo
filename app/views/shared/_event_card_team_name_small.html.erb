<%= link_to event_path(event), class:'inherit-all' do %>
  <div class="event-card br shadow <%= "red-glow" unless event.team_member_id %>" style="min-width: 250px">
    <div class="d-flex justify-content-between align-items-center">
      <div class="d-flex align-items-center">
        <div class='mx-3'>
          <h6><strong><%= event.title %></strong></h6>
          <% if event.location_id %>
            <small> <strong>@<%= (Location.find(event.location_id)).name %></strong></small>
          <% end %>
          <p><%= event.description %></p>
          <%= event.team.name %>
        </div>
    </div>
      <div class='mx-3'>
        <p class='my-0'><%= event.start_time.strftime('%H:%M') %></p>
        <p class='text-center my-0'>-</p>
        <p class='my-0'><%= event.end_time.strftime('%H:%M') %></p>
      </div>
    </div>
  </div>
<% end %>
