<%= link_to team_path(team), class:'inherit-all' do %>
  <div class="team-card br box-shadow">
    <h2><%= team.name %></h2>
    <h3><%= team.sport %></h3>
    <p><%= team.description %></p>
    <% if user = TeamMember.find_by(user: current_user, team: team).is_coach %>
      <%= link_to 'Edit team', team_path(team), class: 'btn btn-primary br'%>
      <%= link_to 'Delete team', team_path(team), data: {turbo_method: :delete, turbo_confirm: "Are you sure?"}, class: 'btn btn-danger br text-white'%>
    <% end %>
  </div>
<% end %>
