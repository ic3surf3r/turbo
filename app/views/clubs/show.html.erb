<div class="container">
  <div class="row mt-3">
    <div class="col-4">
      <div>
        <h2 class='mt-2 text-white'>Club Page</h2>
        <%= render 'shared/club_card_big', club: @club %>
        <%= render 'shared/invite_link', club: @club %>
      </div>
      <div>
        <h2 class='text-white'>Teams</h2>
        <%= link_to 'Create team', new_club_team_path(@club), class:'btn btn-warning text-white br' %>
        <% if @club.teams.includes([:team_members]).length == 0 %>
          <h5 class="mt-3 text-white">This club does not have any teams yet</h5>
        <% else %>
          <% @club.teams.each do |team| %>
            <%= render 'shared/team_card', team: team %>
          <% end %>
        <% end %>
      </div>
    </div>



    <div class="col-8">
      <div>
        <h2 class='mt-2 text-white'>Upcoming events</h2>
        <% if @upcoming_events.length == 0 %>
          <h4>No upcoming events</h4>
        <% else %>
          <% @upcoming_events.each do |event| %>
            <%= render 'shared/event_card', event: event %>
          <% end %>
        <% end %>
      </div>
    </div>
  </div>
  <br>
</div>
