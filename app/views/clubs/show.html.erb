<div class="container">
  <div class="row mt-3">
    <div class="col-lg-4 col-12">
      <div>
        <h2 class='mt-2 text-white'>Club Page</h2>
        <%= render 'shared/club_card_big', club: @club %>
        <p class="my-5"><%= render 'shared/invite_link', club: @club %></p>
      </div>
      <div class="mt-5">
          <h2 class='text-white d-flex justify-content-between'>Teams <%= link_to 'Create team', new_club_team_path(@club), class:'btn btn-warning text-white br' %></h2>
          <% if @club.teams.length == 0 %>
            <h5 class="mt-3 text-white">This club does not have any teams yet</h5>
          <% else %>
            <% @club.teams.each do |team| %>
              <%= render 'shared/team_card', team: team %>
            <% end %>
          <% end %>
      </div>
    </div>



    <div class="col-lg-8 col-12">
      <div>
        <h2 class='mt-2 text-white'>Upcoming Events</h2>
        <% if @upcoming_events.length == 0 %>
          <h4>No upcoming events</h4>
        <% else %>
          <% @upcoming_events.each do |event| %>
            <%= render 'shared/event_card', event: event %>
          <% end %>
        <% end %>
      </div>
    </div>
  </div>
  <br>
</div>
