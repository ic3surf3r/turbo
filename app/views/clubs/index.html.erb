<div class="container">
  <br>
  <div class="d-flex justify-content-end">
    <%= link_to 'New club', new_club_path, class: 'btn btn-warning text-white' %>
  </div>
  <% if @clubs.length == 0 %>
    <h4>You have not joined any clubs yet</h4>
  <% else %>
    <div class="row">
      <% @clubs.each do |club| %>
        <div class="col-lg-6 col-12">
          <%= render "shared/club_card", club: club %>
        </div>
      <% end %>
    </div>
  <% end %>
  <br>
</div>
