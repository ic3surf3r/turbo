<div class="container">
  <br>
  <div class="d-flex justify-content-end">
    <%= link_to "New Event", club_events_path(@club), class: "btn btn-warning text-white"%>
  </div>
  <div class="d-flex justify-content-center align-items-center">
    <%= link_to club_cal_path(start_date: @monday.prev_day(7)), class: "text-black text-decoration-none me-3" do %>
      <h3><<</h3>
    <% end %>
    <h3>
      <%= @monday.strftime("%B %d %Y") %> - <%= @monday.next_day(6).strftime("%B %d %Y") %>
    </h3>
    <%= link_to club_cal_path(start_date: @monday.next_day(7)), class: "text-black text-decoration-none ms-3" do %>
      <h3>>></h3>
    <% end %>
  </div>
  <div class="cal">
    <div class="cal-item">
      <h4>Start Time</h4>
    </div>
    <div class="cal-item">
      <h4><%= @monday.strftime("%a %d") %></h4>
    </div>
    <div class="cal-item">
      <h4><%= @monday.next_day(1).strftime("%a %d") %></h4>
    </div>
    <div class="cal-item">
      <h4><%= @monday.next_day(2).strftime("%a %d") %></h4>
    </div>
    <div class="cal-item">
      <h4><%= @monday.next_day(3).strftime("%a %d") %></h4>
    </div>
    <div class="cal-item">
      <h4><%= @monday.next_day(4).strftime("%a %d") %></h4>
    </div>
    <div class="cal-item">
      <h4><%= @monday.next_day(5).strftime("%a %d") %></h4>
    </div>
    <div class="cal-item">
      <h4><%= @monday.next_day(6).strftime("%a %d") %></h4>
    </div>
    <%= render 'cal_row', start_time: "00:00", end_time: "07:59", time_slot: 0 %>
    <%= render 'cal_row', start_time: "08:00", end_time: "08:59", time_slot: 1 %>
