    <%= render 'cal_row', start_time: "16:00", end_time: "16:59", time_slot: 9 %>
    <%= render 'cal_row', start_time: "17:00", end_time: "17:59", time_slot: 10 %>
    <%= render 'cal_row', start_time: "18:00", end_time: "18:59", time_slot: 11 %>
    <%= render 'cal_row', start_time: "19:00", end_time: "19:59", time_slot: 12 %>
