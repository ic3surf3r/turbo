<div class="container">
  <div class="mx-auto" style="width: 30rem">
    <div class="text-center mt-5">
      <h2>New club</h2>
    </div>
        <%= simple_form_for(club) do |f| %>
            <%= f.input :name,
                    label: false,
                    input_html: { placeholder: "Name", class: "border-dark my-4 bg-info"}   %>
            <%= f.input :description,
                    label: false,
                    input_html: { placeholder: "Description", class: "border-dark my-4 bg-info"}   %>
            <%= f.input :photo, as: :file, label: false, input_html: { placeholder: "Pick a team", class: "border-dark my-4 bg-info"}  %>
            <%= f.input :address,
                    label: false,
                    input_html: { placeholder: "Address", class: "border-dark my-4 bg-info"}   %>
          <div class="my-3form-actions text-center rounded d-grid gap-2">
            <%= f.submit "Submit Event", class:"btn btn-secondary bg-dark"%>
          </div>

        <% end %>
    </div>
  </div>
</div>
