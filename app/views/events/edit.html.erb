<div class="container">
  <div class="mx-auto" style="width: 30rem">
    <div class="text-center mt-5">
      <h2  class="text-white">Edit this event</h2>
    </div>

      <%= simple_form_for @event do |f| %>
                <%= f.input :title,
                    label: false,
                    input_html: { placeholder: "Title", class: "border-dark my-4 bg-info"}  %>
        <%= f.input :description,
                    label: false,
                    input_html: { placeholder: "Description", class: "border-dark my-4 bg-info"} %>
        <%= f.input :team_id,
                    label: false,
                    input_html: { placeholder: "Team", class: "border-dark my-4 bg-info"}, as: :hidden, input_html: { value: @event.team.id } %>
        <%= f.input :team_member_id, label: false, prompt: "Coach Responsible", collection: @event.team.team_members.where( is_coach: true ), label_method: :member_name, value_method: :id, input_html: {class: "border-dark my-4 bg-info"}  %>
        <%= f.input :address,
                    label: false,
                    input_html: { placeholder: "Address", class: "border-dark my-4 bg-info"} %>
        <%= f.input :start_time,
                    as: :string,
                    label: false,
                    input_html: { data: { controller: "datepicker" }, placeholder: "Date", class: "border-dark my-4 bg-info" } %>
        <%= f.input :duration,
                    prompt: "Duration",
                    label:false,
                    collection: ['0:15', '0:30', '0:45', '1:00', '1:15', '1:30', '1:45', '2:00', '2:15', '2:30', '2:45', '3:00', '3:15', '3:30', '3:45', '4:00'],
                    input_html: { class: "border-dark my-4 bg-info"}  %>
        <div class="my-3form-actions text-center rounded d-grid gap-2">
          <%= f.submit "Submit Event", class:"btn btn-secondary bg-dark"%>
        </div>
      <% end %>
    </div>
  </div>
</div>
