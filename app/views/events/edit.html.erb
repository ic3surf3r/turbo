<div class="container">
  <div class="mx-auto" style="width: 30rem">
    <div class="text-center mt-5">
      <h2>Edit this event</h2>
    </div>

      <%= simple_form_for @event do |f| %>
        <%= f.input :title,
                    label: false,
                    input_html: { placeholder: "Title", class: "border-dark my-4 bg-info"}  %>
        <%= f.input :description,
                    label: false,
                    input_html: { placeholder: "Description", class: "border-dark my-4 bg-info"}  %>
        <%= f.input :start_time,
                    label: false,
                    input_html: { placeholder: "Start time", class: "border-dark my-4 bg-info"}, as: :time %>
        <%= f.input :end_time,
                    label: false,
                    input_html: { placeholder: "End time", class: "border-dark my-4 bg-info"}, as: :time %>
        <div class="my-3form-actions text-center rounded d-grid gap-2">
          <%= f.submit "Submit New Event", class:"btn btn-secondary bg-dark"%>
        </div>
      <% end %>
    </div>
  </div>
</div>
