<div class="container">
  <div class="row">
    <div class="col-7">
      <div class="fixed-on-scroll">
        <div class="team-card box-shadow br p-3">
          <h2><%= @event.title %></h2>
          <p><%= @event.description %></p>
          <p><%= @event.start_time.strftime('%H:%M') %> - <%= @event.end_time.strftime('%H:%M') %></p>
          <% if @event.team_member_id %>
            <p><strong>Coach: </strong><%= @event.team_member.user.fullname%></p>
          <% else %>
            <p><strong>Coach: </strong>No coach assigned to this event yet</p>
          <% end %>
          <% if current_user.coach_or_manager?(@event.team) %>
            <div class='buttons'>
              <%= link_to edit_event_path(@event), class: 'btn btn-primary br' do %>
                <i class="fa-regular fa-pen-to-square"></i>
              <% end %>
            </div>
          <% end %>
        </div>
        <div class="event-card br box-shadow p-3">
          <div class='br' style="width: 95%; height: 400px; margin: 10px auto;"
            data-controller="map"
            data-map-marker-value="<%= @marker.to_json %>"
            data-map-api-key-value="<%= ENV['MAPBOX_API_KEY'] %>"></div>
        </div>
      </div>
      </div>
    </div>


    <div class="col-5">
      <div class="my-20">
        <%= link_to "Chat", event_chat_path(@event), class: "btn btn-dark w-100 br" %>
      </div>
      <% if @attendance %>
        <div class="event-card box-shadow br p-3">
          <h1>Attendance form</h1>
          <%= simple_form_for [@event, @attendance] do |f| %>
            <%= f.collection_radio_buttons :absence, [[true, 'Absent'], [false, 'Present']], :first, :last %>
            <%= f.input :comment %>
            <%= f.button :submit, "Mark as absent", class: "btn btn-primary br" %>
          <% end %>
        </div>
      <% end %>
      <h2>Members</h2>
      <h4 class='my-2'>Present</h4>
      <div class='players-list-card br box-shadow list-group'>
        <% @absent_team_members = @event.team.team_members.select{|team_member| team_member.attendances.find_by(event: @event).absence == true if team_member.attendances.find_by(event: @event) } %>
        <% @present_team_members = @event.team.team_members - @absent_team_members %>
          <% @present_team_members.each do |team_member| %>
            <%= render 'shared/players_list', team_member: team_member, team: @event.team %>
          <% end %>
      </div>
      <h4 class='my-2'>Absent</h4>
      <div class='players-list-card br box-shadow list-group'>
          <% @absent_team_members.each do |team_member| %>
            <%= render 'shared/players_list', team_member: team_member, team: @event.team %>
          <% end %>
      </div>
      <br>
    </div>

    </div>
  </div>
</div>
